.container
  %section
    .page-header
      %h2 Celsus 블로그

    .row
      .col-sm-2
        %ul.list-unstyled.category-list
          - @categories.each do |category|
            %li.category-list__item
              =link_to category.name, posts_path(category: category.name)
              (#{category.posts.count})
      .col-sm-10
        - @posts.each do |post|
          .post-item
            .post-item__title
              %h3
                [ #{post.category.name if post.category} ]
                =post.title
            .post-item__created-at
              = l post.created_at
            .post-item__body
              = raw post.body
          %hr/

    .paginate
      = paginate @posts